{% extends 'base.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block content %}
    <div class="container mt-5 mb-5">
        <div class="row d-flex justify-content-center">
            <div class="col-xxl-5 col-xl-6 col-lg-8 col-md-9">
                <div class="box bg-white shadow-lg p-5 rounded-1">
                    <h2 class="text-center mb-5">Logowanie</h2>
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="mb-3">
                            <label for="inputUsername" class="form-label">Nazwa uzytkownika</label>
                            <input type="text" name="username" class="form-control" id="inputUsername" aria-describedby="emailHelp"
                                   required autofocus>
                        </div>
                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Hasło</label>
                            <input type="password" name="password" class="form-control" id="inputPassword" required>
                        </div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        <button type="submit" class="btn btn-success">Zaloguj</button>
                        <a class="text-decoration-none text-success" href="#"><h6 class="text-center mt-5">Nie pamiętam hasła</h6></a>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
